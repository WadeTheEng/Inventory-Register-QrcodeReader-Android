<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="TextLabel">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="BlueButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_blueround</item>
    </style>
    <style name="WhiteButton">
        <item name="android:textSize">18sp</item>        >
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/AppBlue</item>
        <item name="android:background">@drawable/btn_whiteround</item>
    </style>
    <style name="MediumDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SmallDescription">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
</resources>
