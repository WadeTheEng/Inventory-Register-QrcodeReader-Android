<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mike.buildsourced.main.MaintncFragment">

    <LinearLayout android:id="@+id/fragment_maintnc_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/fragment_maintnc_camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/fragment_maintnc_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_whiteround"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Cancel"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/AppBlue"
                />
            <Button
                android:layout_above="@id/fragment_maintnc_btn_cancel"
                android:id="@+id/fragment_maintnc_btn_update"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_blueround"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:text="Update"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:layout_above="@id/fragment_maintnc_btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/maintnc_shape">
                <TextView
                    android:id="@+id/fragment_maintnc_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Palmer"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/AppGrey"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/AppGrey"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Maintenance Required"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>
                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/fragment_maintnc_switch_maintnc_required"
                        style="@style/SwitchButtonStyle"
                        android:layout_gravity="center"
                        app:kswTintColor="@color/AppGreen"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/AppGrey"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/fragment_maintnc_edit_maintnc_notes"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Maintenance notes"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/AppGrey"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
