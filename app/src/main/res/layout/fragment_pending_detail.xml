<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="mike.buildsourced.pending.detail.PendingDetailFragment">
    <LinearLayout
        android:id="@+id/fragment_pending_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_below="@id/fragment_pending_detail_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:text="Lng Update"
        android:textColor="@color/black"
        android:id="@+id/fragment_pending_detail_txt_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="07/05/13 2017"
        android:layout_marginTop="5dp"
        android:textColor="@color/AppGrey"
        android:layout_below="@id/fragment_pending_detail_txt_title"
        android:id="@+id/fragment_pending_detail_txt_date"/>
    <LinearLayout
        android:layout_below="@id/fragment_pending_detail_txt_date"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/AppGrey"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/fragment_pending_detail_view_main"
        android:layout_below="@id/fragment_pending_detail_txt_date"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample CAT Loader"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/fragment_pending_detail_txt_assetname"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset ID: 11396"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/fragment_pending_detail_txt_assetid"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_pending_detail_view_latlng"
        android:layout_below="@id/fragment_pending_detail_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lat:1123 Lng:323"
            android:textSize="18sp"
            android:textColor="@color/AppGreen"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/fragment_pending_detail_txt_latlng"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approximate Address"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/fragment_pending_detail_txt_address"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_pending_detail_view_maintnc"
        android:layout_below="@id/fragment_pending_detail_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/AppGrey"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_wrench"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Maintenance Required"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/fragment_pending_detail_switch_maintnc_required"
                style="@style/SwitchButtonStyle"
                android:layout_gravity="center"
                app:kswTintColor="@color/AppGreen"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/AppGrey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="blah blah"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/fragment_pending_detail_txt_maintnc_notes"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/AppGrey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_pending_detail_view_image"
        android:layout_below="@id/fragment_pending_detail_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Added"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/fragment_pending_detail_iv_image"/>
    </LinearLayout>
</RelativeLayout>
