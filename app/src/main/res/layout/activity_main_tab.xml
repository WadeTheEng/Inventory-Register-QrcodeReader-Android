<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_tab"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mike.buildsourced.main.MainTabActivity">

    <mike.buildsourced.main.CustomViewPager
        android:id="@+id/main_tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></mike.buildsourced.main.CustomViewPager>
    <RelativeLayout android:id="@+id/main_tab_tabview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/main_tab_line"
            android:background="@color/AppLightGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/main_tab_line"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/main_tab_tab0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/main_tab_tab0_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_scan_d"/>
                    <TextView
                        android:id="@+id/main_tab_tab0_text"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:text="SCAN"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/AppBlue"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/AppLightGrey"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_tab_tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/main_tab_tab1_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_home_d"/>
                    <TextView
                        android:id="@+id/main_tab_tab1_text"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:text="HOME"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/AppBlue"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/AppLightGrey"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_tab_tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/main_tab_tab2_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_help_d"/>
                    <TextView
                        android:id="@+id/main_tab_tab2_text"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:text="HELP"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/AppBlue"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/AppLightGrey"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
